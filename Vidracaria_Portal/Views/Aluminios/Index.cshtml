@model X.PagedList.IPagedList<Vidracaria_Portal.Models.Administrador.Cadastros.AluminiosModel>
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "Listagem";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

@section Styles{
    <style>
        .wrap {
            text-overflow: ellipsis;
            /* Required for text-overflow to do anything */
            white-space: nowrap;
            overflow: hidden;
            width: 100px;
            max-width: 100px;
        }
    </style>
}

<div class="content">
    <div class="row" style="margin-bottom: 15px; padding-left: 5px;">
        <div class="col-md-12">
            <div class="col-md-6">
                <a asp-action="Create" class="btn btn-outline-danger">Criar Novo</a>
            </div>
            <div class="col-md-6">
                <form asp-controller="Aluminios" asp-action="Index" method="get" style="margin-top: 12px;">
                    <input style=" border: 1px solid #00008B;" type="text" class="form-control" value="@ViewData["Filtro"]"
                           placeholder="Pesquisar" name="pesquisa" aria-label="" aria-describedby="basic-addon1" />
                    <div class="input-group-append" style="margin-top: 12px;">
                        <button class="btn btn-outline-dark" type="submit">Pesquisar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="table-responsive" style="margin-left: 20px;">
        <table class="table" style="width: 1500px;">
            <thead class="table-dark">
                <tr>
                    <th>
                        Nome
                    </th>
                    <th>
                        Cor
                    </th>
                    <th>
                        Marca
                    </th>
                    <th>
                        Estoque Max
                    </th>
                    <th>
                        Estoque Min
                    </th>
                    <th>
                        Preço Venda
                    </th>
                    <th>
                        Preço Fábrica
                    </th>
                    <th>
                        Data Cadastro
                    </th>
                    <th>Operações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="wrap">
                                @Html.DisplayFor(modelItem => item.NomeAluminio)
                            </div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cor.NomeCor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Marca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EstoqueMaximo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EstoqueMinimo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrecoVenda)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrecoFabrica)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataCadastro)
                        </td>
                        <td>
                            <a style="margin-right: 10px;" asp-action="Edit" asp-route-id="@item.CodigoAluminio"><i class="fas fa-edit"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.CodigoAluminio"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
