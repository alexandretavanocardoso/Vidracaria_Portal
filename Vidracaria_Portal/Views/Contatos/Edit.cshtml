@model Vidracaria_Portal.Models.Cliente.ContatoModel

@{
    ViewData["Title"] = "Retornar";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="container">
    <div class="content">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CodigoContato" />
                    <input type="hidden" asp-for="DataContato" />
                    <input type="hidden" asp-for="DataRetorno" />

                    <div style="display: flex;">
                        <div class="form-group col-md-6">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" readonly="" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" readonly="" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div style="display: flex;">
                        <div class="form-group col-md-12">
                            <label asp-for="Assunto" class="control-label"></label>
                            <input asp-for="Assunto" class="form-control" readonly="" />
                            <span asp-validation-for="Assunto" class="text-danger"></span>
                        </div>
                    </div>
                    <div style="display: flex;">
                        <div class="form-group col-md-12">
                            <label asp-for="Mensagem" class="control-label"></label>
                            <textarea asp-for="Mensagem" class="form-control" readonly=""></textarea>
                            <span asp-validation-for="Mensagem" class="text-danger"></span>
                        </div>
                    </div>
                    <div style="display: flex;">
                        <div class="form-group col-md-12">
                            <label asp-for="Retorno" class="control-label"></label>
                            <textarea asp-for="Retorno" class="form-control"></textarea>
                            <span asp-validation-for="Retorno" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group" style="margin-left: 16px;">
                        <button type="submit" value="Save" class="btn btn-dark">Enviar</button>
                        <a asp-action="Index" class="btn btn-danger">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
