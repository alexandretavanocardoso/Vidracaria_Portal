@model Vidracaria_Portal.ViewModel.ContatoViewModel;

@{ ViewData["title"] = "Contato";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml"; }

@section Styles{
    <style>
        .fa-paper-plane {
            font-size: 60px;
            color: #cc1616;
            padding: 8px 10px;
        }

        .fa-mobile-alt {
            font-size: 60px;
            color: #cc1616;
            padding: 8px 10px;
        }

        .fa-map-marker-alt {
            font-size: 60px;
            color: #cc1616;
            padding: 8px 10px;
        }
    </style>
}

<section id="hero" style="background: url('../img/Banner/banner4.jpg'); height: 300px;" class="d-flex align-items-center">
</section>

<section id="contact" class="contact">
    <div class="container">

        <div class="section-title">
            <span>Contato</span>
            <h2>Contato</h2>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="info-box mb-4">
                    <i class="fas fa-map-marker-alt"></i>
                    <h3 style="font-weight: bold; color: #343a40;">Localização</h3>
                    <p style="color: #343a40; font-size: 14px;">Avenida Pedro Ometto, Barra Bonita SP</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="info-box  mb-4">
                    <i class="far fa-paper-plane"></i>
                    <h3 style="font-weight: bold; color: #343a40;">E-mail</h3>
                    <p style="color: #343a40; font-size: 14px;">vidracariaportalbb@hotmail.com</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="info-box  mb-4">
                    <i class="fas fa-mobile-alt"></i>
                    <h3 style="font-weight: bold; color: #343a40;">Celular</h3>
                    <p style="color: #343a40; font-size: 14px;">+55 (14) 99773-1577</p>
                    <p style="color: #343a40; font-size: 14px;">+55 (14) 3641-1797</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6 ">
                <iframe class="mb-4 mb-lg-0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3686.3285251131233!2d-48.5519076854842!3d-22.491853985224367!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94c74590beab1b2d%3A0x6fa908ed044e99d!2sVidra%C3%A7aria%20Portal!5e0!3m2!1spt-BR!2sbr!4v1615428643855!5m2!1spt-BR!2sbr" style="border:0; width: 100%; height: 487px; border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
            <div class="col-lg-6 php-email-form">
                <div style="display: flex; justify-content: flex-end; margin: 8px 0px;">
                    <div class="btn btn-dark" style="cursor: pointer; margin-right: 8px;" onclick="onClick_AlternarEntreEnvios(1)"><i class="fas fa-mail-bulk"></i></div>
                    <div class="btn btn-danger" style="cursor: pointer" onclick="onClick_AlternarEntreEnvios(2)"><i class="fab fa-whatsapp"></i></div>
                </div>
                <form role="form" id="divEnvioDeEmail" asp-action="Contatos" method="post">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label style="color: #343a40;" for="txtNome">Nome:</label>
                            <input asp-for="Contato.Nome" class="form-control" id="txtNome" placeholder="Ex. Seu nome" required>
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <label style="color: #343a40;" for="txtEmail">E-mail:</label>
                            <input asp-for="Contato.Email" class="form-control" id="txtEmail" placeholder="Ex. seuemail@exemplo.com" required>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <label style="color: #343a40;" for="txtAssunto">Assunto:</label>
                        <input class="form-control" asp-for="Contato.Assunto" id="txtAssunto" placeholder="Ex. Assunto" required>
                    </div>
                    <div class="form-group mt-3">
                        <label style="color: #343a40;" for="txtMensagemEmail">Mensagem:</label>
                        <textarea class="form-control" id="txtMensagemEmail" asp-for="Contato.Nome" rows="5" placeholder="Ex. Sua mensagem" required></textarea>
                    </div>
                    <div class="text-center" style="margin-top: 20px;color: white;"><button class="btn btn-danger" type="submit">Enviar E-mail</button></div>
                </form>

                <div id="divEnvioWhatsapp" style="display: none;">
                    <div>
                        <label style="color: #343a40;" for="txtMensagem">Mensagem: </label>
                        <textarea style="width:100%;" id="txtMensagem" placeholder="Ex. Sua mensagem"></textarea>
                    </div>
                    <div id="botaoWhats">
                        <div class="text-center" style="margin-top: 20px; color: white;cursor: pointer"><a href='javascript:void(0)' onclick="onClick_EnviarMensagemWhatsapp()" class="btn btn-danger" id="linkWhats">Enviar WhatsApp</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/javaScriptPages/Contato.js"></script>
}