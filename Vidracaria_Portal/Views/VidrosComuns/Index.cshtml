                @Html.DisplayFor(modelItem => item.Imagem)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodigoVidro">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CodigoVidro">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CodigoVidro">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
