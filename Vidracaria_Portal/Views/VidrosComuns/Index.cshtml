            <th>
                @Html.DisplayNameFor(model => model.EstoqueMaximo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstoqueMinimo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expessura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoVenda)
