@model IEnumerable<Vidracaria_Portal.Models.Administrador.Cadastros.VidrosComunsModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="content">
    <div class="row" style="margin-bottom: 15px; padding-left: 5px;">
        <div class="col-md-12">
            <div class="col-md-6">
                <a asp-action="Create" class="btn btn-outline-danger">Criar Novo</a>
            </div>
            <div class="col-md-6">

            </div>
        </div>
    </div>
    <div class="table-responsive" style="margin-left: 20px;">
        <table class="table" style="width: 1500px;">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NomeVidro)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AdesivoId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PeliculaId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExpessuraId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Marca)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EstoqueMaximo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EstoqueMinimo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PrecoVenda)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PrecoFabrica)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Imagem)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataCadastro)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeVidro)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AdesivoId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PeliculaId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExpessuraId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Marca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EstoqueMaximo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EstoqueMinimo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrecoVenda)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrecoFabrica)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Imagem)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataCadastro)
                        </td>
                        <td>
                            <a style="margin-right: 10px;" asp-action="Edit" asp-route-id="@item.CodigoVidro"><i class="fas fa-edit"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.CodigoVidro"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
