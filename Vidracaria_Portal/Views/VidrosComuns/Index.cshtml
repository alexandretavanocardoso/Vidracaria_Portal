@model IEnumerable<Vidracaria_Portal.Models.Administrador.Cadastros.VidrosComunsModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeVidro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorVidro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
