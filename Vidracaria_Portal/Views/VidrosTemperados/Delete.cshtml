@model Vidracaria_Portal.Models.Administrador.Cadastros.VidrosTemperadosModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<div class="container">
    <div class="content">

        <h1>Deseja deletar esse Vidro ?</h1>

        <form asp-action="Delete" style="padding-bottom: 50px;">
            <input type="hidden" asp-for="CodigoVidro" />
            <button type="submit" value="Delete" class="btn btn-dark">Deletar</button>
            <button asp-action="Index" class="btn btn-danger">Voltar</button>
        </form>
    </div>
</div>
